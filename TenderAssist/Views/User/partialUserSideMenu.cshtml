@model TenderAssist.ViewModel.TenderDetail
@using TenderAssist.Controllers;

@{
    UserController us = new UserController();
    var userName = us.GetUserName();
    var intActive = Session["IsActiveUser"] != null ? Convert.ToInt32(Session["IsActiveUser"]) : 2;
}
<div>
    <div class="row">
        <div class="col-md-12">
            <div class="card center">
                <h3>
                    <i class="fa fa-user"></i>
                    Hello, @userName
                </h3>
                <div class="userdashboardservice">
                    <p>you can view your profile along with given access to you</p>
                    <div class="grayline"></div>
                    <ul class="LinkList">
                        <li>
                            <a href="@Url.Action("Index", "User")">
                                <i class="fa fa-hand-o-right text-orange"></i>
                                My Profile
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ChangePassword", "User")">
                                <i class="fa fa-hand-o-right text-orange"></i>
                                Change Password
                            </a>
                        </li>
                        @*<li>
                                <a href="#">
                                    <i class="fa fa-hand-o-right text-orange"></i>
                                    My Favorite Tenders
                                </a>
                            </li>*@
                        <li>
                            <a href="@Url.Action("Feedback", "User")">
                                <i class="fa fa-hand-o-right text-orange"></i>
                                Feedback
                            </a>
                        </li>
                        @if (intActive == 2)
                        {
                            <li>
                                <a href="@Url.Action("Renewal", "User")">
                                    <i class="fa fa-hand-o-right text-orange"></i>
                                    Renewal
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>

<style>
    .PermissionPanel {
        background-color: #fcfcff;
        border: 1px solid #dcdcdc;
        padding: 5px;
    }

    .dashboardiconsize {
        font-size: 25px !important;
    }

    .userdashboardservice {
        padding: 10px;
    }

    h3.box-title {
        color: #fff !important;
    }

    .card {
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        /*min-height: 350px;*/
        padding: 1px 0px;
        margin-bottom: 5px;
    }

        .card p {
            margin: 0px !important;
        }

        .card h3 {
            font-size: 16px;
            font-weight: 600;
            /*height: 40px;*/
            padding: 10px;
            background-color: #1A5276;
            color: #fff;
        }

        .card:hover {
            box-shadow: 0 5px 10px 0 rgba(0,0,0,0.30),0 2px 10px 0 rgba(0,0,0,0.12);
        }

    ul.LinkList {
        padding: 0;
        margin: 0;
        list-style: none;
    }

        ul.LinkList li {
            margin: 10px 5px;
        }

            ul.LinkList li a {
                color: #0a55d5;
                font-size: 15px;
            }

            ul.LinkList li.morelink a {
                color: #f56954;
                font-size: 15px;
            }

            ul.LinkList li a:hover {
                color: #000;
            }
</style>