@using System.Configuration
@using System.Globalization
@model TenderAssist.ViewModel.TenderDetail


<div class="container_fullMiddle">
    <div class="breadcrumbgrid">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb" itemscope="" itemtype="https://data-vocabulary.org/Breadcrumb">
                    <div class="CurrentDiv">
                        <a href="/" itemprop="url" style="text-decoration: none;">
                            <span itemprop="title">Home</span>
                        </a>
                    </div>
                    <div itemprop="child" itemscope="" itemtype="https://data-vocabulary.org/Breadcrumb">
                        <div class="CurrentDiv">
                            <span class="seperator">›</span>
                        </div>
                        <div class="CurrentDiv">
                            <span itemprop="title" class="text-bold">
                                Pay Online
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="well SuccessMessageHeaderSpan">
                <h3>Dear <b>@ViewBag.UserEmail, </b></h3>
                <br />
                <span>
                    Thank you for submitting the details.
                </span>
                <br />
                <br />
                <span>
                    @Html.Raw(Model.DisplayText)
                    
                </span> 
                <br /><br />
                <span>
                    Check your email <b>@ViewBag.EmailId </b>for further details.
                    <br />
                    You may also reach us on +91 97247 00247.
                </span>
                <br />
                <br />
                <a class="btn btn-success btn-flat btn-lg" href="@Url.Action("Index", "Payonline")">
                    <i class="fa fa-rupee"></i>
                    PayNow
                </a>
                <br />
                <br />
            </div>

        </div>
    </div>
</div>

<style>
    .SuccessMessageHeaderSpan {
        font-size: 15px;
    }
</style>